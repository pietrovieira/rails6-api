<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Indentifyid</th>
      <th>Birthday</th>
      <th>Isactive</th>
      <th>Street</th>
      <th>Num</th>
      <th>Neighborhood</th>
      <th>City</th>
      <th>Uf</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.User_id %></td>
        <td><%= person.name %></td>
        <td><%= person.indentifyId %></td>
        <td><%= person.birthday %></td>
        <td><%= person.isActive %></td>
        <td><%= person.street %></td>
        <td><%= person.num %></td>
        <td><%= person.Neighborhood_id %></td>
        <td><%= person.City_id %></td>
        <td><%= person.uf %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

